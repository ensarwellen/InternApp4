@model InternApp.Models.Root

@if (Model != null)
{
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="card mb-4" style="color: #4B515D; border-radius: 35px;">
                <div class="card-body p-4">
                    <div class="d-flex">
                        <h6 class="flex-grow-1">@Model.name</h6>
                        @*<h6>@Model.timezone</h6>*@
                    </div>

                    <div class="d-flex flex-column text-center mt-5 mb-4">
                        <h6 class="display-4 mb-0 font-weight-bold" style="color: #1C2331;">@Math.Round(@Model.main.temp)°C</h6>
                        <span class="small" style="color: #868B94">@Model.weather[0].description</span>
                    </div>

                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1" style="font-size: 1rem;">
                            <div><i class="fas fa-wind fa-fw" style="color: #868B94;"></i> Rüzgar Hızı: <span class="ms-1">@Model.wind.speed km/h</span></div>
                            <div><i class="fas fa-tint fa-fw" style="color: #868B94;"></i> Nem: <span class="ms-1">@Model.main.humidity%</span></div>
                            <div><i class="fas fa-sun fa-fw" style="color: #868B94;"></i> En Yüksek Sıcaklık: <span class="ms-1">@Math.Round(Model.main.temp_max)°C</span></div>
                        </div>
                        <div>
                            @{

                                var iconCode = Model.weather[0].icon;
                                var iconUrl = Url.Action("GetWeatherIcon", "Weather", new { iconCode = iconCode });
                            }



                            <img src="@Url.Content("~/images/" + Model.weather[0].icon + ".png")" class="card-img-top" width="70" height="70" alt="Hava Durumu">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
}